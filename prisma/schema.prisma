datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Level {
  BEGINNER
  INTERMEDIARY
  ADVANCE
}

model Workout {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  duration    Float
  level       Level
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  exercises Exercise[] // relação 1:N com Exercise
}

model Exercise {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  equipment   String?
  reps        Int?
  sets        Int?
  duration    Float? // em minutos, se for exercício baseado em tempo
  workoutId   Int
  workout     Workout @relation(fields: [workoutId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
